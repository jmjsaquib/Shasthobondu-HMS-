
@{
    ViewBag.Title = "Index";
}

<div id="grid"></div>
<script type="text/javascript">
    jQuery(document).ready(function () {
        var dataSource = new kendo.data.DataSource({
            pageSize:20,
            transport: {
                read: {
                    url: "@UrlConfig.Action("GetAllPlant", "Plant")",
                    type: "GET"
                },
                update: {
                    url: "@UrlConfig.Action("Put", "Plant")",
                    type: "PUT",
                    complete: function (e) {
                        jQuery("#grid").data("kendoGrid").dataSource.read();
                    }
                },
                destroy: {
                    url: "@UrlConfig.Action("Delete", "Plant")",
                    type: "DELETE"
                },
                create: {
                    url: "@UrlConfig.Action("Post", "Plant")",
                    type: "POST",
                    complete: function (e) {
                        jQuery("#grid").data("kendoGrid").dataSource.read();
                    }
                }
            },
            //    code: "Ok",
            autoSync: false,
            schema: {
                errors: function (e) {
                    console.log(e.errors);
                    //alert(e.error);
                    if (e.output === "error") {
                        console.log(e.output);
                       //KendoWindowFunction(e.msg, "error", "");
                      // this.cancelChanges();
                   }
                },

                model: {
                    id: "plant_id",
                    fields: {
                        plant_id: { editable: false, nullable: true },
                        plant_name: { type: "string", validation: { required: true }}
                    }

                }
            }

        });
        jQuery("#grid").kendoGrid({
            dataSource: dataSource,
            filterable: true,
            pageable: {
                refresh: true,
                input: true,
                pageSize: 20,
                numeric: false,
                pageSizes: [10, 20, 50]
            },
            sortable: true,
            groupable: true,
            resizable: true,

            toolbar: [{ name: "create", text: "Add Document Type" }],
            columns: [
                { field: "plant_name", title: "Plant Name", id: "plant_id", width: "150px" },
                { command: ["edit", "destroy"], title: "Action", width: "230px" }],
            editable: "inline"
        });

    });


    </script>



    <div id="kWindow"></div>

