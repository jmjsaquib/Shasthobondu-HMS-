                                        frmString += 'dataTextField: "' + prop_value_name + '",';
                                        frmString += 'dataValueField: "' + prop_value_id + '",';
                                        frmString += 'dataSource: {';
                                        frmString += 'transport: {';
                                        frmString += ' read: {';
                                        frmString += ' url: "' + url + '",';
                                        frmString += ' type: "GET"';
