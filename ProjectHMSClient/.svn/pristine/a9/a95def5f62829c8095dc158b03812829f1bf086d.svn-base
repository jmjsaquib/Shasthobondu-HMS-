                                <div class="col-md-8">
                                    <input type="text" name="payment_terms" id="payment_terms" style="width: 100%;">
                                </div>
                            </div>

                            <div class="col-md-5">
                                <div class="col-md-3">
                                    <label for="payment_method">Payment Method</label>
