@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div id="grid"></div>
<script type="text/javascript">
    jQuery(document).ready(function () {
        var dataSource = new kendo.data.DataSource({
            pageSize:20,
            transport: {
                read: {
                    url: "@UrlConfig.Action("GetAllUomCategory", "UomCategory")",
                    type: "GET"
                },
                update: {
                    url: "@UrlConfig.Action("Put", "UomCategory")",
                    type: "PUT",
                    complete: function (e) {
                        jQuery("#grid").data("kendoGrid").dataSource.read();
                    }
                },
                destroy: {
                    url: "@UrlConfig.Action("Delete", "UomCategory")",
                    type: "DELETE"
                },
                create: {
                    url: "@UrlConfig.Action("Post", "UomCategory")",
                    type: "POST",
                    complete: function (e) {
                        jQuery("#grid").data("kendoGrid").dataSource.read();
                    }
                }
            },
            //    code: "Ok",
            autoSync: false,
            schema: {
                errors: function (e) {
                    console.log(e.errors);
                    //alert(e.error);
                    if (e.output === "error") {
                        console.log(e.output);
                       KendoWindowFunction(e.msg, "error", "");
                       this.cancelChanges();
                   }
                },

                model: {
                    id: "uom_category_id",
                    fields: {
                        uom_category_id: { editable: false, nullable: true },
                        uom_category_name: { type: "string", validation: { required: true } },
                        is_active: { type: "boolean" }
                    }

                }
            }

        });
        jQuery("#grid").kendoGrid({
            dataSource: dataSource,
            filterable: true,
            pageable: {
                refresh: true,
                input: true,
                pageSize: 20,
                numeric: false,
                pageSizes: [10, 20, 50]
            },
            sortable: true,
            groupable: true,
            resizable: true,

            toolbar: [{ name: "create", text: "Add Uom Category" }],
            columns: [
                { field: "uom_category_name", title: "Category Name", id: "uom_category_id", width: "150px" },
                { field: "is_active", title: "Is Active?", width: "150px" },
                { command: ["edit", "destroy"], title: "Action", width: "230px" }],
            editable: "inline"
        });




    });


</script>



<div id="kWindow"></div>

