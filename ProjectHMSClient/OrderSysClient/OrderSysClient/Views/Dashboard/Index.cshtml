
@{
    ViewBag.Title = "Index";
}
<div class="row " hidden id="jPopup" style="text-align: center; padding-bottom: 20px; color: #7EA700; font-weight: 800;">
    <h3 id="welcomeNote"></h3>
</div>
<div class="row">
    <div class="col-lg-3 col-xs-6">
        <!-- small box -->
        <div class="small-box bg-yellow">
            <div class="inner">
                <h3>44</h3>
                <p>User Registrations</p>
            </div>
            <div class="icon">
                <i class="icon-user-1"></i>
            </div>
            <a href="#" class="small-box-footer">
                More info <i class="fa fa-arrow-circle-right"></i>
            </a>
        </div>
    </div>
    <div class="col-lg-3 col-xs-6">
        <div class="small-box bg-aqua">
            <div class="inner">
                <h3>150</h3>
                <p>Mobile Users</p>
            </div>
            <div class="icon">
                <i class="icon-smart-phone"></i>
            </div>
            <a class="small-box-footer" href="#">
                More info
                <i class="fa fa-arrow-circle-right"></i>
            </a>
        </div>
    </div>
</div>

<script type="text/javascript">
    var employeeId = '@ViewBag.employee_id';
    $(function() {
        $.ajax({
            type: "GET",
            url: "@UrlConfig.Action("GetEmployeeDoctorById", "Employee")",
            data: {
                employeeId: employeeId,
            },
            dataType: "json",
            success: function(data) {
                console.log(data);
                var note = $("#welcomeNote");
                note.html('');
                var letter = "Welcome Back Mr. " + data.employee_name + ".";
                note.html(letter);
                $('#jPopup').show(1200);
            }
        });
    });
</script>

