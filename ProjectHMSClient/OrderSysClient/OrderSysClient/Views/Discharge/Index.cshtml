
@{
    ViewBag.Title = "Discharge List";
}

<script id="action-template" type="text/x-kendo-template">
    #if(status=="entry"){#
    <a style="font-size:11px; text-decoration: none;" href="/Patient/Edit?patientId=#=patient_id#" class="k-button k-grid-even">Edit</a>
    <a style="font-size:11px; text-decoration: none;" href="/Patient/Appoinment?patientId=#=patient_id#" class="k-button k-grid-even">Appointment</a>
    #}else if(status=="appoinmented"){#
    <a style="font-size:11px; text-decoration: none;" href="/Presscription/NewPresscription?patientId=#=patient_id#&&appoinmentId=#=appoinment_id#" class="k-button k-grid-even">Prescription</a>
    #}else if(status=="presscribed" && need_admission=="yes"){#
    <a style="font-size:11px; text-decoration: none;" href="/Presscription/NewPresscription?patientId=#=patient_id#&&appoinmentId=#=appoinment_id#" class="k-button k-grid-even">Admission</a>

    #}else{#
    <a style="font-size:11px; text-decoration: none;" href="/discharge/add?patientId=#=patient_id#&&admissionId=#=admission_id#" class="k-button k-grid-even">DisCharge</a>

    #}#
</script>
<div class="panel panel-success">
    <div class="panel-heading">
        &nbsp;&nbsp;
        <h3>Discharge List</h3>
    </div>
    <div class="panel-body">
        <div id="grid"></div>
    </div>
</div>
<script type="text/javascript">
    jQuery(document).ready(function () {
        var dataSource = new kendo.data.DataSource({
            pageSize: 20,
            transport: {
                read: {
                    url: "@UrlConfig.Action("GetAllDischarge", "Discharge")",
                    type: "GET"
                }
            },
            //    code: "Ok",
            autoSync: false,
            schema: {

                model: {
                    id: "discharge_id",
                    fields: {
                        discharge_id: { editable: false, nullable: true },
                        admission_date: { type: "string" },
                        admission_id: { type: "number" },
                        discharge_date: { type: "string" },
                        patient_id: { type: "string" },
                        patient_name: { type: "string" },
                        discharge_by: { type: "string" },
                        discharge_type_id: { type: "string" },
                        discharge_type_name: { type: "string" },
                        department_id: { type: "string" },
                        department_name: { type: "string" },
                        status: { type: "string" }

                    }

                }
            }

        });
        jQuery("#grid").kendoGrid({
            dataSource: dataSource,
            filterable: true,
            pageable: {
                refresh: true,
                input: true,
                pageSize: 20,
                numeric: false,
                pageSizes: [10, 20, 50]
            },
            sortable: true,
            groupable: true,
            resizable: true,
            columns: [
                { field: "patient_id", title: "ID", width: "50px" },
                { field: "patient_name", title: "Patient Name", id: "patient_id", width: "150px" },
                { field: "discharge_by", title: "Discharge By", id: "patient_id", width: "150px" },
                { field: "admission_date", title: "Adm. Date", width: "100px" },
                { field: "discharge_date", title: "Dis. Date", width: "100px" },
                { field: "discharge_type_name", title: "Discharge type", width: "150px" },
                { field: "department_name", title: "Department Name", width: "150px" },
                { field: "status", title: "Status", width: "100px" },
            {
                title: "Action", width: "150px",
                template: kendo.template($("#action-template").html())

            }]
        });


    });


</script>

