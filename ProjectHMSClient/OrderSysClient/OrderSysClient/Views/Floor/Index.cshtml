@{
    ViewBag.Title = "Index";
}

<div class="panel panel-success">
    <div class="panel-heading">&nbsp;&nbsp;Floor Information</div>
    <div class="panel-body">
        <div id="grid"></div>
    </div>
</div>
<script type="text/javascript">
    jQuery(document).ready(function () {
        var dataSource = new kendo.data.DataSource({
            pageSize: 20,
            transport: {
                read: {
                    url: "@UrlConfig.Action("GetAllFloor", "Floor")",
                    type: "GET"
                },
                update: {
                    url: "@UrlConfig.Action("Put", "Floor")",
                    type: "PUT",
                    complete: function (e) {
                        jQuery("#grid").data("kendoGrid").dataSource.read();
                    }
                },
                destroy: {
                    url: "@UrlConfig.Action("Delete", "Floor")",
                    type: "DELETE"
                },
                create: {
                    url: "@UrlConfig.Action("Post", "Floor")",
                    type: "POST",
                    complete: function (e) {
                        jQuery("#grid").data("kendoGrid").dataSource.read();
                    }
                }
            },
            //    code: "Ok",
            autoSync: false,
            schema: {
                errors: function (e) {
                    console.log(e.errors);
                    //alert(e.error);
                    if (e.output === "error") {
                        console.log(e.output);
                        KendoWindowFunction(e.msg, "error", "");
                        this.cancelChanges();
                    }
                },

                model: {
                    id: "floor_id",
                    fields: {
                        floor_id: { editable: false, nullable: true },
                        floor_name: { type: "string", validation: { required: true } },
                        room_count: { type: "number" },

                    }

                }
            }

        });
        jQuery("#grid").kendoGrid({
            dataSource: dataSource,
            filterable: true,
            pageable: {
                refresh: true,
                input: true,
                pageSize: 20,
                numeric: false,
                pageSizes: [10, 20, 50]
            },
            sortable: true,
            groupable: true,
            resizable: true,

            toolbar: [{ name: "create", text: "Add Floor" }],
            columns: [
                { field: "floor_name", title: "Floor Name", id: "floor_id", width: "150px" },
                { field: "room_count", title: "Room Count", width: "150px" },
                { command: ["edit", "destroy"], title: "Action", width: "230px" }],
            editable: "inline"
        });




    });


</script>



<div id="kWindow"></div>