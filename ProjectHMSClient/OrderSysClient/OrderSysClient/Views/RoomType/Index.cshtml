@{
    ViewBag.Title = "Index";
}

<div class="panel panel-success">
    <div class="panel-heading">&nbsp;&nbsp;Room Type</div>
    <div class="panel-body">
        <div id="grid"></div>
    </div>
</div>
<script type="text/javascript">
    jQuery(document).ready(function () {
        var dataSource = new kendo.data.DataSource({
            pageSize: 20,
            transport: {
                read: {
                    url: "@UrlConfig.Action("GetAllRoomType", "RoomType")",
                    type: "GET"
                },
                update: {
                    url: "@UrlConfig.Action("Put", "RoomType")",
                    type: "PUT",
                    complete: function (e) {
                        jQuery("#grid").data("kendoGrid").dataSource.read();
                    }
                },
                destroy: {
                    url: "@UrlConfig.Action("Delete", "RoomType")",
                    type: "DELETE"
                },
                create: {
                    url: "@UrlConfig.Action("Post", "RoomType")",
                    type: "POST",
                    complete: function (e) {
                        jQuery("#grid").data("kendoGrid").dataSource.read();
                    }
                }
            },
            //    code: "Ok",
            autoSync: false,
            schema: {
                errors: function (e) {
                    console.log(e.errors);
                    //alert(e.error);
                    if (e.output === "error") {
                        console.log(e.output);
                        KendoWindowFunction(e.msg, "error", "");
                        this.cancelChanges();
                    }
                },

                model: {
                    id: "room_type_id",
                    fields: {
                        room_type_id: { editable: false, nullable: true },
                        room_type_name: { type: "string", validation: { required: true } },
                        rent: { type: "number" },
                        description: { type: "string" },

                    }

                }
            }

        });
        jQuery("#grid").kendoGrid({
            dataSource: dataSource,
            filterable: true,
            pageable: {
                refresh: true,
                input: true,
                pageSize: 20,
                numeric: false,
                pageSizes: [10, 20, 50]
            },
            sortable: true,
            groupable: true,
            resizable: true,

            toolbar: [{ name: "create", text: "Add Room Type" }],
            columns: [
                { field: "room_type_name", title: "Room Type Name", id: "room_type_id", width: "150px" },
                { field: "rent", title: "Room Cost", width: "150px" },
                { field: "description", title: "Room Description", width: "150px" },
                { command: ["edit", "destroy"], title: "Action", width: "230px" }],
            editable: "inline"
        });




    });


</script>



<div id="kWindow"></div>




